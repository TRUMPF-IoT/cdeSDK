<Window x:Class="ChatClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="MessageList" HorizontalAlignment="Left" Height="272" Margin="84,45,0,0" VerticalAlignment="Top" Width="592"/>
        <TextBox x:Name="MessageText" HorizontalAlignment="Left" Height="23" Margin="84,340,0,0" TextWrapping="Wrap" Text="Hello world!" VerticalAlignment="Top" Width="477"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="601,339,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="84,378,0,0" TextWrapping="Wrap" Text="Your name:" VerticalAlignment="Top"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="23" Margin="148,377,0,0" TextWrapping="Wrap" Text="Somebody" VerticalAlignment="Top" Width="528"/>
    </Grid>
</Window>
