<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>library</OutputType>
    <PackageId>cdeCSVFileParserShared</PackageId>
    <Version>6.104.0</Version>
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
    <Authors>Markus Horstmann</Authors>
    <Company>C-Labs</Company>
    <Copyright>Copyright Â© 2015-2024 TRUMPF Laser GmbH, authors: C-Labs</Copyright>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <PackageDescription>CSV File Parser for C-DEngine</PackageDescription>
    <PackageIcon>toplogo-128.png</PackageIcon>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <PackageOutputPath>$(SolutionDir)Nugets</PackageOutputPath>
    <ProjectName>$(AssemblyName).$(TargetFramework)</ProjectName>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="**\*.cs" buildAction="Compile" PackagePath="content\Shared\$(PackageId)"/>
    <Content Include="**\*.cs" buildAction="Compile" PackagePath ="contentFiles\cs\netstandard2.1\Shared\$(PackageId)"/>
  </ItemGroup>
	
  <ItemGroup>
    <None Include="..\..\..\toplogo-128.png" Pack="true" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="C-DEngine" Version="6.104.0-beta.2" />
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="TheCSVFileParser.projitems" />
  </ItemGroup>

</Project>
